<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewAndroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/android"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageAvatar"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@+id/textViewAndroid"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/textNumberOfPosts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="95dp"
        android:layout_toEndOf="@+id/imageAvatar"
        android:gravity="center"
        android:minWidth="80dp"
        android:text="@string/number_of_posts"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textNumberOfFollowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textNumberOfPosts"
        android:layout_toEndOf="@+id/textNumberOfPosts"
        android:gravity="center"
        android:minWidth="80dp"
        android:text="@string/number_of_followers"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textNumberOfFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textNumberOfFollowers"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textNumberOfFollowers"
        android:gravity="center"
        android:minWidth="80dp"
        android:text="@string/number_of_following"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textPosts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textNumberOfPosts"
        android:layout_toEndOf="@+id/imageAvatar"
        android:gravity="center"
        android:minWidth="80dp"
        android:text="@string/posts"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textFollowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textNumberOfFollowers"
        android:layout_toEndOf="@+id/textPosts"
        android:gravity="center"
        android:minWidth="80dp"
        android:text="@string/followers"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textNumberOfFollowing"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textFollowers"
        android:gravity="center"
        android:minWidth="80dp"
        android:text="@string/following"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/username"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@+id/imageAvatar"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/address"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@+id/username"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@id/address"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/description"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        android:background="@color/grey"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@+id/imageView1"
        android:layout_toEndOf="@+id/imageView1"
        android:background="@color/grey"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:background="@color/grey"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:background="@color/grey"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:background="@color/grey"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/imageView5"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/imageView5"
        android:background="@color/grey"
        android:clickable="true"
        android:focusable="true" />

    <Button
        android:id="@+id/buttonDirections"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="70dp"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/ic_baseline_directions_24"
        android:text="@string/directions"
        android:textColor="@color/blue_soft" />

    <Button
        android:id="@+id/buttonCall"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonDirections"
        android:layout_toEndOf="@+id/buttonDirections"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/ic_baseline_call_24"
        android:text="@string/call"
        android:textColor="@color/blue_soft" />

    <Button
        android:id="@+id/buttonSave"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonCall"
        android:layout_toEndOf="@+id/buttonCall"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/ic_baseline_star_24"
        android:text="@string/save"
        android:textColor="@color/blue_soft" />

    <Button
        android:id="@+id/buttonWebsite"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonSave"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/buttonSave"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/ic_baseline_insert_link_24"
        android:text="@string/website"
        android:textColor="@color/blue_soft"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey"
        android:layout_below="@+id/buttonDirections"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/imageViewBig1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/view"
        android:layout_marginTop="70dp"
        android:layout_alignParentStart="true"
        android:background="@color/grey"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/imageViewBig2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:layout_alignTop="@+id/imageViewBig1"
        android:layout_toEndOf="@+id/imageViewBig1"
        android:background="@color/grey"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/imageViewBig3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imageViewBig2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/imageViewBig2"
        android:background="@color/grey"
        android:clickable="true"
        android:focusable="true" />

</RelativeLayout>